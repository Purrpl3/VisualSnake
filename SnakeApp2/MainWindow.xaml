<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="Score" HorizontalAlignment="Left" Margin="730,18,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="58"/>
        <Rectangle x:Name="Fruit" HorizontalAlignment="Left" Height="20" Stroke="Red" VerticalAlignment="Top" Width="20" Fill="Red" Margin="400,120,0,0"/>
        <Rectangle x:Name="SnakeHead" HorizontalAlignment="Left" Height="20" Stroke="Black" VerticalAlignment="Top" Width="20" Fill="Black" Margin="400,200,0,0"/>
        <TextBox x:Name="GTT" HorizontalAlignment="Left" Margin="760,0,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="28"/>
        <TextBox x:Name="STT" HorizontalAlignment="Left" Margin="730,0,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="30"/>
        <Canvas>
            <Canvas x:Name="snakeCanvas" Height="434" Width="800" HorizontalAlignment="Center" VerticalAlignment="Top">
                <TextBox x:Name="Direction" Canvas.Left="730" TextWrapping="Wrap" Text="0" Canvas.Top="37" Width="29" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox x:Name="DirectionNumber" Canvas.Left="759" TextWrapping="Wrap" Text="0" Canvas.Top="37" Width="29" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </Canvas>
        </Canvas>

    </Grid>
</Window>
